<div class="social-icons size-{{ settings.soc_icon_size }}">
  {% if settings.social_twitter_enabled %}
  <a title="Twitter" class="twitter" target="_blank" href="{{ settings.social_twitter_url }}">Twitter</a>
  {% endif %}
  {% if settings.social_facebook_enabled %}
  <a title="Facebook" class="facebook" target="_blank" href="{{ settings.social_facebook_url }}">Facebook</a>
  {% endif %}
  {% if settings.social_tumblr_enabled %}
  <a title="Tumblr" class="tumblr" target="_blank" href="{{ settings.social_tumblr_url }}">Tumblr</a>
  {% endif %}
  {% if settings.social_rss_enabled %}
  <a title="RSS" class="rss" target="_blank" href="{{ settings.social_rss_url }}">RSS</a>
  {% endif %}
  {% if settings.social_youtube_enabled %}
  <a title="Youtube" class="youtube" target="_blank" href="{{ settings.social_youtube_url }}">YouTube</a>
  {% endif %}
  {% if settings.social_vimeo_enabled %}
  <a title="Vimeo" class="vimeo" target="_blank" href="{{ settings.social_vimeo_url }}">Vimeo</a>
  {% endif %}
  {% if settings.social_instagram_enabled %}
  <a title="Instagram" class="instagram" target="_blank" href="{{ settings.social_instagram_url }}">Instagram</a>
  {% endif %}
  {% if settings.social_pinterest_enabled %}
  <a title="Pinterest" class="pinterest" target="_blank" href="{{ settings.social_pinterest_url }}">Pinterest</a>
  {% endif %}
  {% if settings.social_flickr_enabled %}
  <a title="Flickr" class="flickr" target="_blank" href="{{ settings.social_flickr_url }}">Flickr</a>
  {% endif %}
  {% if settings.social_google_enabled %}
  <a title="Google+" class="google" target="_blank" href="{{ settings.social_google_url }}">Google+</a>
  {% endif %}
  <span class="div">|</span>
  <a title="Search" class="search {% if settings.search_alt %}lozenge{% endif %}" href="/search">{{ 'layout.header.search' | t }}</a>
</div><!-- .social -->
